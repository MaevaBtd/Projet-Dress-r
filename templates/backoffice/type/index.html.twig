{% extends 'backoffice/base.html.twig' %}

{% block title %}Gestions des Types
{% endblock %}

{% block body %}


    <div class="container-fluid">
        <h1 class="my-5">Gestion des Types</h1>

        <a class="btn btn-outline-secondary mb-4" href="{{path("backoffice_new_type")}}"> <h3>Ajouter un Type</h3></a>
           
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>name</th>
                </tr>
            </thead>
            <tbody>

                    {% for type in types %}


                    <tr>
                        <td>{{type.id}}</td>
                        <td>{{type.name}}</td>
                        
                      
                        <td>
                        <a href="{{path("backoffice_edit_type",{'id':type.id}) }}" class="btn btn-primary">Edit</a>
                        </td>
                        <td>
                        <a class="btn btn-danger" href="{{path("backoffice_delete_type",{'id':type.id}) }}">Delete</a>
                        </td>
                        
                    </tr>
                    
                {% endfor %}
            </tbody>

        </thead>
    </table>

</div>{% endblock %}


