{% extends 'backoffice/base.html.twig' %}

{% block title %}Gestions des Utilisateurs
{% endblock %}

{% block body %}


    <div class="container-fluid">
        <h1 class="my-5">Gestion des Users</h1>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Username</th>
                    <th>email</th>
                </tr>
            </thead>
            <tbody>

                    {% for user in users %}


                    <tr>
                        <td>{{user.id}}</td>
                        <td>{{user.username}}</td>
                        <td>{{user.email}}</td>
                      
                        <td>
                        <a href="{{path("backoffice_edit_user",{'id':user.id}) }}" class="btn btn-primary">Edit</a>
                        </td>
                        <td>
                        <a class="btn btn-danger" href="{{path("backoffice_delete_user", {'id': user.id})}}">Delete</a>
                        </td>
                        
                    </tr>

                {% endfor %}
            </tbody>

        </thead>
    </table>

</div>{% endblock %}


